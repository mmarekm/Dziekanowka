                uGracza.Ilosc -= produkt.Ilosc;
            }
        }
        if (wyciskarka)
            foreach (var produkt in taca)
                if (UzyskanySok(produkt.Nazwa) > 0)
                    Gracz.ProduktP($"{produkt.Nazwa}Sok").Ilosc += UzyskanySok(produkt.Nazwa);
