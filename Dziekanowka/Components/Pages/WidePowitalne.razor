@using Dziekanowka.Mechanizm
@inject Dzwieki dzwieki
<div class="wideo-kontener">
    <video autoplay muted playsinline class="wideo-pelny-ekran" @ref="videoElement">
        <source src="video/witaj.mp4" type="video/mp4" />
    </video>
</div>

@code {
    private ElementReference videoElement;
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await Task.Delay(8000);
            dzwieki.ZakonczWidePowitalne();
        }
    }
}
<style>
    .wideo-kontener {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        z-index: 9999;
        background-color: black;
    }
    .wideo-pelny-ekran {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
</style>